{
    "semantic": {
        "color": {
            "primary": "#0C0A09",
            "secondary": "#292524",
            "accent": "#EAB308",
            "background": "#0C0A09",
            "textMain": "#F5F5F4",
            "textMuted": "#A8A29E",
            "border": "#44403C"
        },
        "typography": {
            "family": {
                "heading": "Roboto, sans-serif",
                "body": "Inter, sans-serif"
            },
            "size": {
                "hero": "clamp(4rem, 12vw, 10rem)",
                "h1": "2.5rem",
                "h2": "2rem",
                "h3": "1.75rem",
                "h4": "1.5rem",
                "h5": "1.25rem",
                "h6": "1rem"
            },
            "letterSpacing": {
                "tightHero": "-0.04em",
                "heading": "-0.02em"
            },
            "lineHeight": {
                "heading": "1.2",
                "body": "1.6"
            }
        },
        "icon": {
            "size": {
                "sm": "16px",
                "md": "24px",
                "lg": "32px",
                "xl": "48px"
            },
            "strokeWidth": {
                "light": "1",
                "regular": "1.5",
                "bold": "2"
            }
        },
        "navigation": {
            "navbarHeight": "4rem",
            "sidebarWidth": "16rem",
            "zIndex": {
                "navbar": "50",
                "sidebar": "40"
            }
        },
        "animation": {
            "duration": {
                "fast": "150ms",
                "normal": "300ms",
                "slow": "500ms"
            },
            "easing": {
                "smooth": "cubic-bezier(0.4, 0, 0.2, 1)",
                "bounce": "cubic-bezier(0.68, -0.55, 0.26, 1.55)"
            }
        }
    }
}